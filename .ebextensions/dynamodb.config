Resources:
  metricNamesTable:
    Type: AWS::DynamoDB::Table
    Properties:
      KeySchema:
         HashKeyElement:
           AttributeName: domain
           AttributeType: S
         RangeKeyElement:
           AttributeName: name
           AttributeType: S
      ProvisionedThroughput:
         ReadCapacityUnits: 1
         WriteCapacityUnits: 1
      TableName: metric_names
  tagNamesTable:
    Type: AWS::DynamoDB::Table
    Properties:
      KeySchema:
         HashKeyElement:
           AttributeName: domain
           AttributeType: S
         RangeKeyElement:
           AttributeName: name
           AttributeType: S
      ProvisionedThroughput:
         ReadCapacityUnits: 1
         WriteCapacityUnits: 1
      TableName: tag_names
  tagValuesTable:
    Type: AWS::DynamoDB::Table
    Properties:
      KeySchema:
         HashKeyElement:
           AttributeName: domain
           AttributeType: S
         RangeKeyElement:
           AttributeName: value
           AttributeType: S
      ProvisionedThroughput:
         ReadCapacityUnits: 1
         WriteCapacityUnits: 1
      TableName: tag_values
  dataPointsTable:
    Type: AWS::DynamoDB::Table
    Properties:
      KeySchema:
         HashKeyElement:
           AttributeName: domain_metric_tbase_tags
           AttributeType: S
         RangeKeyElement:
           AttributeName: toffset
           AttributeType: N
      ProvisionedThroughput:
         ReadCapacityUnits: 10
         WriteCapacityUnits: 40
      TableName: data_points
  dataPointsIndexTable:
    Type: AWS::DynamoDB::Table
    Properties:
      KeySchema:
         HashKeyElement:
           AttributeName: domain_metric
           AttributeType: S
         RangeKeyElement:
           AttributeName: tbase_tags
           AttributeType: S
      ProvisionedThroughput:
         ReadCapacityUnits: 40
         WriteCapacityUnits: 1
      TableName: data_points_index

